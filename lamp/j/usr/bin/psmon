#!/bin/sh

export APPLET=psmon

/usr/bin/touch /app/$APPLET/window/select 2> /dev/null  &&  exit  ||  /bin/true

rm /app/$APPLET 2> /dev/null

cd -P /new/port

echo 0 > vis
echo 10,47 > pos
echo 500,100 > size
echo Processes > title

touch window

echo 9 > window/text-size
echo 4 > window/text-font

echo 000 > window/back-color
echo 0f0 > window/fore-color

ln /new/frame   view
ln /new/caption view/v

echo 4 > view/padding
echo 0 > view/v/wrapped

daemonize --cwd --stdout --ctty=tty -- ps --wide --sleep=0.2 > view/v/text

echo 1 > vis

/bin/ln -s $PWD /app/$APPLET

