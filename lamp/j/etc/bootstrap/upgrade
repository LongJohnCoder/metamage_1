#!/bin/sh

host=lamp.sourceforge.net

list=http://$host/experimental/

export MBIN=mBin

echo Checking $host for latest version...

htget $list | perl -we 'my $pf = `cat /etc/platform`; chop $pf; while (<>) { m{ ( lamp-${pf}_[\d-]+ ) \.$ENV{MBIN}\.gz }osx and $last = $1; }; exec "/etc/bootstrap/upgrade-lamp", $last;'

