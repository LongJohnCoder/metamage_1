#!/bin/sh

echo "Downloading /usr/lib/perl archive..."
htget http://lamp.sourceforge.net/experimental/usr-lib-perl.bin.gz --save /tmp/usr-lib-perl.bin.gz

echo "Decompressing archive..."
gzip -d /tmp/usr-lib-perl.bin.gz

echo "Decoding archive..."
macbin --decode /tmp/usr-lib-perl.bin /usr/lib/

echo "Done."

