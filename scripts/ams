#!/bin/sh -e

AppName="$1"

if [ -z "$AppName" ]; then
	AppName=TestApp
fi

mkdir -p ~/var/run/raster

SCREEN=~/var/run/raster/ams
RASTER="--raster=$SCREEN"

CORE=ams-core
RSRC=ams-rsrc
PACK=ams-pack
QD=ams-qd
UI=ams-ui

test -f $SCREEN || raster make -g 512x342*1 -m paint -R $SCREEN

exhibit $RASTER -t "Advanced Mac Substitute" \
graft \
	freemountd -q --root ~/68k // \
	xv68k -SP $RASTER -m$CORE -m$RSRC -m$PACK -m$QD -m$UI ~/68k/app $AppName
